<%- include('./partial/header',{title : "Register Page"}) %>
<body>
    <nav class="navbar navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="/">Commercial Vaccine</a>
        </div>
    </nav>
    <h1 class="text-center mt-4">Admin</h1><br>

    <div class="d-flex bd-highlight">
        <div class="p-2 flex-grow-1 bd-highlight">
            <table class="table">
                <tr>
                    <th>Vaccine name</th>
                    <th>Country Manufacture</th>
                    <th>Base Material</th>
                    <th>Price</th>
                    <th>Effication</th>
                    <th>Description</th>
                    <th>Image</th>
                    <th>Action</th>
                </tr>
                <% dataVaccine.forEach(el => { %>
                    <tr>
                        <td><%= el.vaccine_name %></td>
                        <td><%= el.country_manufacture %></td>
                        <td><%= el.base_material %></td>
                        <td><%= el.price %></td>
                        <td><%= el.effication %></td>
                        <td><%= el.description %></td>
                        <td><%= el.image %></td>
                        <th><a href="/user/edit/<%=el.id%>">Edit</a>|<a href="/user/delete/<%=el.id%>">Delete</a></th>
                    </tr>
                <% }) %>
            </table>
        </div>
        <div>
            <div class="p-2 bd-highlight">Flex item</div>
            <div class="p-2 bd-highlight">Third flex item</div>
        </div>
      </div>

    <div style="border: 2px solid black; padding: 20px;">
        <form action="/user/admin/add" method="POST">
            <h3>Tambah Kota</h3>
            <label>Kota</label><br>
            <input type="text" name="city_name"><br><br>
            <input type="submit" value="Add city">
        </form>
    </div>
    <div style="border: 2px solid black; padding: 20px;">
        <form action="vaccine/admin/add" method="POST">
            <h3>Add Vaccine</h3>
            <label>Vaccine name</label><br>
            <input type="text" name="vaccine_name"><br>
            <label>Country Manufacture</label><br>
            <input type="text" name="country_manufacture"><br>
            <label>Base Material</label><br>
            <input type="text" name="base_material"><br>
            <label>Effication</label><br>
            <input type="number" name="effication"><br>
            <label>Price</label><br>
            <input type="number" name="price"><br>
            <label>Image</label><br>
            <input type="text" name="image"><br><br>
            <label>Description</label><br>
            <textarea name="description" cols="30" rows="10"></textarea><br>
            <input type="submit" value="Add Vaccine">
        </form>
    </div>
    <table class="table">
        <tr>
            <th>Vaccine name</th>
            <th>Country Manufacture</th>
            <th>Base Material</th>
            <th>Price</th>
            <th>Effication</th>
            <th>Description</th>
            <th>Image</th>
            <th>Action</th>
        </tr>
        <% dataVaccine.forEach(el => { %>
            <tr>
                <td><%= el.vaccine_name %></td>
                <td><%= el.country_manufacture %></td>
                <td><%= el.base_material %></td>
                <td><%= el.price %></td>
                <td><%= el.effication %></td>
                <td><%= el.description %></td>
                <td><%= el.image %></td>
                <th><a href="/user/edit/<%=el.id%>">Edit</a>|<a href="/user/delete/<%=el.id%>">Delete</a></th>
            </tr>
        <% }) %>
    </table>
    <div style="border: 2px solid black; padding: 20px;">
        <form action="/user/vaccinetocity/admin/add" method="POST">
            <h3>Add Vaccine To City</h3>
            <select name="CityId">
                <option disabled selected>--SELECT--</option>
                <% dataCity.forEach(el => {%>
                <option value="<%=el.id%>"><%= el.city_name %></option>
                <% }) %>
            </select>
            <select name="VaccineId">
                <option disabled selected>--SELECT--</option>
                <% dataVaccine.forEach(el => {%>
                <option value="<%=el.id%>"><%= el.vaccine_name %></option>
                <% }) %>
            </select>
            <input type="submit" value="Add Vaccine To City">
        </form>
    </div>

</body>
</html>